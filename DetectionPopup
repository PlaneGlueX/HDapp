--StarterPlayerScripts
-- get stuff
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local DetectionAlert = ReplicatedStorage:WaitForChild("DetectionAlert")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- UI setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DetectionUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local alertLabel = Instance.new("TextLabel")
alertLabel.Size = UDim2.new(0.4, 0, 0.1, 0)
alertLabel.Position = UDim2.new(0.3, 0, 0.05, 0)
alertLabel.BackgroundColor3 = Color3.new(1, 0, 0)
alertLabel.TextColor3 = Color3.new(1, 1, 1)
alertLabel.TextScaled = true
alertLabel.Text = "DETECTED"
alertLabel.Visible = false
alertLabel.Font = Enum.Font.FredokaOne
alertLabel.Parent = screenGui

-- make it visible to player
DetectionAlert.OnClientEvent:Connect(function(detected)
	alertLabel.Visible = detected
end)
